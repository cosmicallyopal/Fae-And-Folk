<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GamePath>D:/SteamLibrary/steamapps/common/Stardew Valley/</GamePath>
    <EnableHarmony>true</EnableHarmony>
    <GameModsPath>D:\SteamLibrary\steamapps\common\Stardew Valley\Mods\</GameModsPath>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="assets\*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="content.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <ContentPacks Include="[CP] FaeAndFolk" Version="1.0.0"/>
    <Content Include="i18n\*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <ContentPacks Include="readme.md"/>
    <Content Include="i18n\*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>


  <ItemGroup>
    <PackageReference Include="Pathoschild.Stardew.ModBuildConfig" Version="4.3.2" />
  </ItemGroup>

</Project>
